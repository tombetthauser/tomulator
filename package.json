{
  "name": "tomulator-crud",
  "version": "1.0.0",
  "description": "Generic CRUD app with Bun, Postgres, React and HTML tables",
  "main": "index.js",
  "scripts": {
    "dev": "bun run --hot src/index.tsx",
    "dev:full": "concurrently \"bun run dev:server\" \"bun run dev:client\"",
    "dev:server": "nodemon --exec \"bun run src/server.ts\" --watch src --ext ts,js",
    "dev:client": "bun run --hot src/index.tsx",
    "build": "bun build src/index.tsx --outdir dist && cp src/index.html dist/ && cp src/styles.css dist/",
    "build:server": "bun build src/server.ts --outdir dist --target node",
    "start": "bun run src/server.ts",
    "start:prod": "bun run dist/server.js"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.8.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-router-dom": "^5.3.3",
    "bun-types": "latest",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
